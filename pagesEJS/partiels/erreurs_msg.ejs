<div class="erreurs">
<% if (locals.errors) { %>
    <% errors.forEach(function(err) { %>
       <p> <%= err.msg %> </p>
    <% }); %>
<% } %>
<% if (success_msg != '') { %>
    <p><%= success_msg %> </p>
<% } %>
<% if (error_msg != '') { %>
    <p><%= error_msg %></p>
<% } %>
<% if (error != '') { %>
    <p><%= error %></p>
<% } %>
</div>